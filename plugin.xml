<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns:android="http://schemas.android.com/apk/res/android" id="custom-file-sb-plugin" version="1">

  <engines>
    <engine name="cordova-android" version=">=8.1.0" />
  </engines>

  <name>custom-file-sb-plugin</name>

  <description>This plugin is used to manipulate the AndroidManifest.xml</description>
  <author>Shikha</author>
  <keywords>AndroidManifest</keywords>

  <license>MIT</license>

  <!-- android -->
  <platform name="android">
    <edit-config file="AndroidManifest.xml"
                 target="/manifest/application"
                 mode="merge">
        <application android:requestLegacyExternalStorage="false"/>
    </edit-config>
  </platform>
</plugin>
